        <% end %>

        <%= headless_tab_panel(data: { headless__tab_target: "panel" }) do %>
          <div class="p-4">
            <h3>Panel 2</h3>
            <p>This is the content for panel 2.</p>
          </div>
        <% end %>

        <%= headless_tab_panel(data: { headless__tab_target: "panel" }) do %>
