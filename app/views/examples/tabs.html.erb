            <h3>Panel 3</h3>
            <p>This is the content for panel 3.</p>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="example mt-8">
  <h2>Manual Tabs</h2>

  <%= headless_tab_group(manual: true) do %>
    <%= headless_tab_list do %>
