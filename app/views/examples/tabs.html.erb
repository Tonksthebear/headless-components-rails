<style>
  .example {
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
  }
  
  [data-controller="headless--tab"] [role="tab"] {
    padding: 0.5rem 1rem;
    border: 1px solid #e2e8f0;
    background-color: #f8fafc;
    cursor: pointer;
  }
  
  [data-controller="headless--tab"] [role="tab"][aria-selected="true"] {
    background-color: #fff;
    border-bottom-color: #fff;
  }
  
  [data-controller="headless--tab"] [role="tablist"] {
    display: flex;
    border-bottom: 1px solid #e2e8f0;
  }
  
  [data-controller="headless--tab"][data-headless--tab-vertical-value="true"] [role="tablist"] {
    flex-direction: column;
    border-bottom: none;
    border-right: 1px solid #e2e8f0;
  }
  
  [data-controller="headless--tab"][data-headless--tab-vertical-value="true"] [role="tab"][aria-selected="true"] {
    border-right-color: #fff;
  }
</style>
