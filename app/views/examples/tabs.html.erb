<h1>Tabs Example</h1>

<div class="example">
  <h2>Basic Tabs</h2>

  <%= headless_tab_group do %>
    <%= headless_tab_list do %>
      <%= headless_tab(data: { headless__tab_target: "tab" }) do %>
        Tab 1
      <% end %>
      <%= headless_tab(data: { headless__tab_target: "tab" }) do %>
        Tab 2
      <% end %>
      <%= headless_tab(data: { headless__tab_target: "tab" }) do %>
        Tab 3
      <% end %>
    <% end %>

    <%= headless_tab_panels do %>
      <%= headless_tab_panel(data: { headless__tab_target: "panel" }) do %>
        <div class="p-4">
          <h3>Panel 1</h3>
          <p>This is the content for panel 1.</p>
        </div>
      <% end %>

      <%= headless_tab_panel(data: { headless__tab_target: "panel" }) do %>
        <div class="p-4">
          <h3>Panel 2</h3>
          <p>This is the content for panel 2.</p>
        </div>
      <% end %>

      <%= headless_tab_panel(data: { headless__tab_target: "panel" }) do %>
        <div class="p-4">
          <h3>Panel 3</h3>
          <p>This is the content for panel 3.</p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

